<section class="m-5">    
    <div class="titulo">
        <h1>Documentary Films</h1>

        <%= link_to documentary_films_new_path do %>
            <i class="fa-solid fa-circle-plus fa-2xl"></i>
        <% end %>    
    </div>
    
    <table class="table table-striped table-dark table-hover">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Synopsis</th>
        <th scope="col">Director</th>
        </tr>
    </thead>
    
    <tbody>

    <% @documentary_films.each do |i| %>
        
        <tr>
            <td><%= i.name %></td>
            <td><%= i.synopsis %></td>
            <td><%= i.director %></td>
        </tr>
        
    <% end %>    

    </tbody>
    
    </table>
    
</section>
